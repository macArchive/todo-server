{
  "name": "todo-server",
  "version": "1.0.0",
  "description": "Todo application server",
  "license": "MIT",
  "author": "mac",
  "main": "index.js",
  "scripts": {
    "prettier": "prettier --write components/*/**.tsx library/*.ts pages/*.tsx pages/**/*.tsx pages/api/*.ts styles/*.ts",
    "lint": "eslint components/*/**.tsx library/*.ts pages/*.tsx pages/**/*.tsx pages/api/*.ts styles/*.ts --fix"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxBracketSameLine": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:react/recommended",
      "standard"
    ],
    "rules": {
      "space-before-function-paren": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0
    }
  },
  "dependencies": {
    "apollo-server": "^2.25.2",
    "graphql": "^15.5.1"
  },
  "devDependencies": {
    "eslint": "^7.30.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "husky": "^7.0.1"
  }
}
